<div id='main'>
  <div id='title'>Eat Da Burger</div>
  <div id='mainimage' align="center"><img src='../assets/img/burgerhead.jpg' width="30%" align="center"></div>
  <div id='mainbody'>
  <div id ='store'><h2>Burger Store</h2><hr></div>
  <div id='devour'><h2>Devour Record</h2><hr></div>
  <div id ='dstore'><ul>
  {{#each burger}}
    {{#unless this.devour}}
      <li><img src='../assets/img/bc.gif' width="10%" align="center"><br>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value=0>
          <button type="submit">DEVOUR!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
  </div>
